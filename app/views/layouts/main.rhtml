<% content_for :stylesheets do -%>
.MAIN0{
display:inline;
padding-right: 15px;
padding-left: 15px;
line-height: 20px;
text-decoration:none;
float:left; 
background-color: #666;
}

.MAIN0 a:hover {
background-color:#666;
color: #FFF;
} 
.MAIN0 a:visited{
background-color:#666;
color: #FFF;
} 

.MAIN1 ,.MAIN2 {
display:inline;
padding-right: 15px;
padding-left: 15px;
line-height: 20px;
text-decoration:none;
float:left; 
}

.MAIN1 a:hover,.MAIN2 a:hover {
background-color:buttonface;
color: #666;
} 
}
<% end -%>

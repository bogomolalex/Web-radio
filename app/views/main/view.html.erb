<div style="width: 800px;text-align:center;margin: 0,auto;">
<%if logged_in? %>
 <%= link_to "Администрирование", :controller=>"menu",:action=>"show" -%>
<%end-%>
  <div style="padding:20;float: right;">
  <table align="center" style="width: 290px;height: 205px;" background="images/radio.jpg">
  <tr>
   <td style="padding:55px;height:100px;" valign="top">
    <div style="padding:80;">
      <%=render :partial => 'shared/radio' -%>
        </div></td>
  </tr>
 </table>
 <div style="padding:15;"></div>
